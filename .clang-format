# https://zed0.co.uk/clang-format-configurator/
# https://releases.llvm.org/14.0.0/tools/clang/docs/ClangFormatStyleOptions.html
# vscode uses clang-format 14

BasedOnStyle: Google
# LLVM, Google, Chromium, Mozilla, WebKit, Microsoft, or GNU
ColumnLimit: 0
IndentWidth: 4
PPIndentWidth: -1
MaxEmptyLinesToKeep: 1
# SpacesBeforeTrailingComments: 2 (ko hieu tai sao nhung ma format ko hoat dong => disable from day 02/12/2023)
SortIncludes: false
Standard: Latest
TabWidth: 128  # (lien quan den 1 cong thuc ao ma nao do)
UseTab: Always # (lien quan den 1 cong thuc ao ma nao do)
# InsertBraces: false (clang-format 15)
# RemoveBracesLLVM: false (hay nhma khong phu hop cp)

AccessModifierOffset: -4
AlignAfterOpenBracket: Align
AlignArrayOfStructures: Right
AlignConsecutiveAssignments: Consecutive
AlignConsecutiveBitFields: None
AlignConsecutiveDeclarations: None
AlignConsecutiveMacros: Consecutive
AlignEscapedNewlines: Right
AlignOperands: AlignAfterOperator
AlignTrailingComments: true
AllowAllArgumentsOnNextLine: true
AllowAllParametersOfDeclarationOnNextLine: true
AllowShortBlocksOnASingleLine: Always
AllowShortCaseLabelsOnASingleLine: true
AllowShortEnumsOnASingleLine: true
AllowShortFunctionsOnASingleLine: All
AllowShortIfStatementsOnASingleLine: AllIfsAndElse
AllowShortLambdasOnASingleLine: All
AllowShortLoopsOnASingleLine: true
AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakAfterReturnType: None
AlwaysBreakBeforeMultilineStrings: true
AlwaysBreakTemplateDeclarations: Yes
# AttributeMacros:
BinPackArguments: true
BinPackParameters: true
BitFieldColonSpacing: Both
BreakBeforeBraces: Custom
BraceWrapping:
  AfterCaseLabel: false
  AfterClass: false
  AfterControlStatement: Never
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterObjCDeclaration: false
  AfterStruct: false
  AfterUnion: false
  AfterExternBlock: false
  BeforeCatch: true
  BeforeElse: true
  BeforeLambdaBody: false
  BeforeWhile: false
  IndentBraces: false
  SplitEmptyFunction: false
  SplitEmptyRecord: false
  SplitEmptyNamespace: false
BreakBeforeBinaryOperators: All # ngoo vc
# BreakBeforeBraces: Custom (above BraceWrapping)
# BreakBeforeConceptDeclarations: Always (not available, who know)
BreakBeforeTernaryOperators: false
BreakConstructorInitializers: BeforeColon
BreakInheritanceList: AfterColon
BreakStringLiterals: true
# ColumnLimit: 0 (above)
# CommentPragmas (khong hieu)
CompactNamespaces: false
ConstructorInitializerIndentWidth: 4
ContinuationIndentWidth: 4
Cpp11BracedListStyle: false
# DeriveLineEnding        (co ve hay)
# DerivePointerAlignment  (co ve hay)
EmptyLineAfterAccessModifier: Never
EmptyLineBeforeAccessModifier: LogicalBlock
# ExperimentalAutoDetectBinPacking (co ve hay)
# ForEachMacros:
# IfMacros:
IncludeBlocks: Preserve
# IncludeCategories (co ve hay)
# IncludeIsMainRegex
# IncludeIsMainSourceRegex
IndentAccessModifiers: false
IndentCaseBlocks: false
IndentCaseLabels: true
IndentExternBlock: Indent
IndentGotoLabels: false
IndentPPDirectives: BeforeHash
IndentRequires: false # (IndentRequiresClause in clang-format 15)
# IndentWidth (above)
IndentWrappedFunctionNames: false
# InsertBraces: false (above)
KeepEmptyLinesAtTheStartOfBlocks: false
# LambdaBodyIndentation: Signature (default)
# MacroBlockBegin
# MacroBlockEnd
# MaxEmptyLinesToKeep (above)
NamespaceIndentation: All
# NamespaceMacros
# PPIndentWidth (above)
PackConstructorInitializers: NextLine
# A lot of Penalty-
PointerAlignment: Right
QualifierAlignment: Left
# QualifierOrder (co ve hay, chua can phai dung)
# RawStringFormats
ReferenceAlignment: Left
ReflowComments: true
# RemoveBracesLLVM (above)
SeparateDefinitionBlocks: Leave
# ShortNamespaceLines (defaults to 1, khong hieu)
# SortIncludes: Never (above)
# SortUsingDeclarations: false (vo dung)
SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false
SpaceAfterTemplateKeyword: false
# SpaceAroundPointerQualifiers: Default
SpaceBeforeAssignmentOperators: true
SpaceBeforeCaseColon: false
SpaceBeforeCpp11BracedList: false
SpaceBeforeCtorInitializerColon: true
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
# SpaceBeforeParensOptions (co ve hay, chua can phai dung)
SpaceBeforeRangeBasedForLoopColon: true
SpaceBeforeSquareBrackets: false
SpaceInEmptyBlock: false
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 1
SpacesInAngles: Never
SpacesInCStyleCastParentheses: false
SpacesInConditionalStatement: false
SpacesInContainerLiterals: true
SpacesInLineCommentPrefix:
  Minimum: 1
  Maximum: -1
SpacesInParentheses: false
SpacesInSquareBrackets: false
# Standard (above)
# StatementAttributeLikeMacros
# StatementMacros
# TabWidth (above)
# TypenameMacros
# UseCRLF
# UseTab (above)
# WhitespaceSensitiveMacros

# DisableFormat: false # top10 format =))
